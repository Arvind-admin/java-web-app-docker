node{
    def buildNumber = BUILD_NUMBER
    stage("Git CheckOut"){
        git url: 'https://github.com/Arvind-admin/java-web-app-docker.git',branch: 'master'
    }
    
    stage("Maven Clean Package"){
      def mavenHome =  tool name: "M3", type: "maven"
      def mavenCMD = "${mavenHome}/bin/mvn"
      sh "${mavenCMD} clean package"
    } 
    
    stage("Build Dokcer Image") {
         sh "docker build -t arvindcdh/java-web-app:${buildNumber} ."
    }
    
    stage("Docker Push"){
        withCredentials([string(credentialsId: 'Docker_Hub_Pwd', variable: 'Docker_Hub_Pwd')]) {
          sh "docker login -u arvindcdh -p ${Docker_Hub_Pwd}"
        }
        sh "docker push arvindcdh/java-web-app:${buildNumber}"
        
    }
    
    // Remove local image in Jenkins Server
    stage("Remove Local Image"){
        sh "docker rmi -f arvindcdh/java-web-app:${buildNumber}"
    }
    
    stage("Deploy to docker swarm cluster"){
        sshagent(['Docker_Swarm_Manager_Dev']) {
            sh 'ssh -o StrictHostKeyChecking=no ec2-user@ip-172-31-45-242 docker service rm javawebapp || true'
            sh "ssh ec2-user@ip-172-31-45-242 docker service create --name javawebapp -p 8080:8080 --replicas 2 arvindcdh/java-web-app:${buildNumber}"
        }
    }
